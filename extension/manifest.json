{
  "manifest_version": 2,

  "name": "CovidFilter",
  "description": "This extension will highlite misinformation related to covid19",
  "version": "1.0.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./assets/js/vendor/jquery.min.js", "./assets/js/content.js", "./assets/js/htmlContent.js"]
    }
  ],

  "background": {
    "scripts": ["./assets/js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": [
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'sha256-B+Qe/KNUDtGDd/m1g5ycAq1DgpLs9ubKmYTlOHBogC8='; object-src 'self'"
}